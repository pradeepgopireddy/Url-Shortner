<h3>Enter Your Url</h3>
<% if @url.errors.any? %>
	<ul>
	<% @url.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>
<%= form_for @url do |f| %>
	<label for="shortened_url_original_url"> Url:</label><br/>
	<%= f.text_area :original_url %><br/>
	<%= f.submit "Shorten" %>
<% end %>